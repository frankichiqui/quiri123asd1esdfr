<div class="sonata-ba-collapsed-fields">
    {{ form_start(form, {'action': admin.generateUrl('create', {'id': admin.id(object), 'uniqid': admin.uniqid, 'subclass': app.request.get('subclass')}), 'method': 'POST'}) }}
    {{ form_errors(form) }}
    <div class="row">
        <div class="hidden">
            <div>
                {{ form_label(form.title) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.title) }} 
                </div>
            </div>
        </div>
        <div class="col-md-2" id="circuit_date">
            <div>
                {{ form_label(form.date) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.date) }} 
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <div>
                {{ form_label(form.adults) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.adults) }} 
                </div>



            </div>
        </div>
        <div class="col-md-1">
            <div>
                {{ form_label(form.kids) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.kids) }} 
                </div>
            </div>
        </div>

        <div class="col-md-2">
            <div>
                {{ form_label(form.polofrom) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.polofrom) }} 
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div>
                {{ form_label(form.places) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.places) }} 
                </div>
            </div>
        </div>
        <div class="col-md-12"><a href="#advance" class="advance_link_circuit">Advance Option</a></div>


        <div class="advance hidden">
            
            
            <div class="col-md-2">
                <div>
                    {{ form_label(form.nights) }}
                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                        {{ form_widget(form.nights) }} 
                    </div>
                </div>
            </div>
            <div class="col-md-2">
                <div>
                    {{ form_label(form.days) }}
                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                        {{ form_widget(form.days) }} 
                    </div>
                </div>
            </div>


        </div>
        <div class="pull-right margin-right-10">
            <div>
                &nbsp;
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    <button name="btn_create_and_edit" type="submit" class="btn btn-info"><i class="fa fa-search"></i> Search</button> 
                </div>
            </div>
        </div>
        <script>
          
        $('input[type="checkbox"]').on('ifChecked', function (event) {
            t = $(this).attr('data-target-class');
            $('.' + t).removeClass('hidden');
            $('#circuit_date').toggleClass('hidden')
        });
        $('input[type="checkbox"]').on('ifUnchecked', function (event) {
            t = $(this).attr('data-target-class');
            $('.' + t).addClass('hidden');
            $('#circuit_date').toggleClass('hidden');
        });
        $('.advance_link_circuit').each(function () {
            $(this).click(function (e) {
                e.preventDefault();
                console.log($(this).parent().next());
                $(this).parent().next().toggleClass('hidden');
            });
        });

        </script>   
        {{ form_end(form) }}
    </div>
</div>