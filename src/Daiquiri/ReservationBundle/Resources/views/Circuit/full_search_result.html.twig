{# empty Twig template #}
{% extends base_template %}

{#{% block tab_menu %}{{ knp_menu_render(admin.sidemenu(action), {'currentClass' : 'active', 'template': admin_pool.getTemplate('tab_menu_template')}, 'twig') }}{% endblock %}#}

{% block show %}
    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}



    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">    <i class="fa fa-refresh"></i> Circuit</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->

        <div class="box-body">
            {% render(controller('DaiquiriReservationBundle:CircuitSearcher:getFullCircuitSearcher',{ '_sonata_admin' : 'admin.circuit.searcher','data':searcher}))%}   
        </div>       

    </div>
      
    {% if salida is defined and salida | length >0%}
        {% for s in salida %}           
                <div class="col-md-12">
                    <div class="row">     

                        <div class="box box-primary">
                            <div class="box-header">
                                <h4 class="box-title">
                                    <span class="label label-primary">Circuit</span> {{ s.obj }}
                                </h4>
                            </div>
                            <div class="box-body">                                
                                    {% render(controller('DaiquiriReservationBundle:CircuitSearcher:renderResultItem',{ '_sonata_admin' : 'admin.circuit','item':s})) %}                               
                            </div>
                        </div>

                    </div>
                </div>
        <div class="row"></div>
        {% endfor %}
    {% endif %}

{% endblock %}