{% block show %}
    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}



    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">    <i class="fa fa-building"></i> Hotel</a></h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->

        <div class="box-body">
            {% render(controller('DaiquiriReservationBundle:OcupationSearcher:getFullOcupationSearcher',{ '_sonata_admin' : 'admin.ocupation.searcher','data':searcher}))%}   
        </div>       

    </div>
     
    {% if salida is defined and salida | length >0%}
        {% for s in salida %}

            <div class="col-md-12">
                <div class="row">     

                    <div class="box box-primary">
                        <div class="box-header">
                            <h4 class="box-title">
                                <span class="label label-primary">Hotel</span>{{ s.hotel }}
                            </h4>
                        </div>
                        <div class="box-body">
                             {% for av in s.availableroom %}
                            {% render(controller('DaiquiriReservationBundle:OcupationSearcher:renderResultItem',{ '_sonata_admin' : 'admin.hotel','item':av})) %}     
                            {% endfor %}

                        </div>
                    </div>

                </div>
            </div>
            <div class="row"></div>
        {% endfor %}
    {% endif %}

{% endblock %}