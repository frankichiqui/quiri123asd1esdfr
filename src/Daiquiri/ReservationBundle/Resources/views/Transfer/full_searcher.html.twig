

<div class="sonata-ba-collapsed-fields">
    {{ form_start(form, {'action': admin.generateUrl('create', {'id': admin.id(object), 'uniqid': admin.uniqid, 'subclass': app.request.get('subclass')}), 'method': 'POST'}) }}
    {{ form_errors(form) }}
    {% set searcher = object %}       
    <div class="row">
        <div class="col-md-2">
            <div>
                {{ form_label(form.exclusive) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.exclusive) }} 
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div>
                {{ form_label(form.placefrom) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.placefrom) }} 
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div>
                {{ form_label(form.placeto) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.placeto ) }} 
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div>
                {{ form_label(form.date) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.date ) }} 
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <div>
                {{ form_label(form.passengers) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.passengers ) }} 
                </div>
            </div>
        </div>
        <div class="col-md-1">
            <div>
                {{ form_label(form.roundtrip) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.roundtrip, {'attr':{'data-target':'roundtrip' }} ) }} 
                </div>
            </div>
        </div>
        {% set show = form.vars.value.roundtrip is defined ? form.vars.value.roundtrip:FALSE %}       
        <div class="col-md-2 {% if not show  %}hidden{% endif %}" id="roundtrip">
            <div>
                {{ form_label(form.dateroundtrip) }}
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    {{ form_widget(form.dateroundtrip) }} 
                </div>
            </div>
        </div>
        <div class="col-md-12"><a href="#advance" class="advance_link">Advance Option</a></div>
        <div class="advance hidden">
            <div class="col-md-3">
                <div>
                    {{ form_label(form.polofrom) }}
                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                        {{ form_widget(form.polofrom ) }} 
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div>
                    {{ form_label(form.poloto) }}
                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                        {{ form_widget(form.poloto ) }} 
                    </div>
                </div>
            </div>
        </div>
        <div class="pull-right margin-right-10">
            <div>
                &nbsp;
                <div class="sonata-ba-field sonata-ba-field-standard-natural">
                    <button name="btn_create_and_create" type="submit" class="btn btn-info"><i class="fa fa-search"></i> Search</button> 
                </div>
            </div>
        </div>
        {{ form_end(form) }}
        <script>

            $('input[type="checkbox"]').on('ifChecked', function (event) {
                t = $(this).attr('data-target');
                $('#' + t).removeClass('hidden');
            });
            $('input[type="checkbox"]').on('ifUnchecked', function (event) {
                t = $(this).attr('data-target');
                $('#' + t).addClass('hidden');
            });

            $('.advance_link').each(function () {
                $(this).click(function (e) {
                    e.preventDefault();
                    console.log($(this).parent().next());
                    $(this).parent().next().toggleClass('hidden');
                });
            });

        </script>
    </div>
</div>

