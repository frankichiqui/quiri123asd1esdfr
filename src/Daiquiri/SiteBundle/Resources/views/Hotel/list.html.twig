{% extends "base.html.twig"%}
{% block body %}
    {% include 'DaiquiriSiteBundle:Default:header.html.twig' %}
    {#{ dump(salida) }#}
    <div class="container">
        {% include 'breadcrumb/breadcrumb.html.twig'%}
        <div class="mfp-with-anim mfp-hide mfp-dialog mfp-search-dialog" id="search-dialog">
            <h3>{{ 'Search for Hotels' | trans({}, 'hotel') }}</h3>
            {{ render(controller('DaiquiriSiteBundle:OcupationSearcher:new')) }}
        </div>

        {% if salida.haveToPaginate %}
            <h3 class="booking-title">{{ salida | length }} {{ 'Hotels availables' | trans({}, 'hotel') }}<small><a class="popup-text" href="#search-dialog" data-effect="mfp-zoom-out">{{ 'Change search' | trans({}, 'hotel') }}</a></small></h3>
        {% else %}
            <h3 class="booking-title">{% if salida | length < 0 %}{{ salida | length }} {{ 'Hotels' | trans({}, 'hotel') }}{% else %}{{ salida | length }} {{ 'Hotels availables' | trans({}, 'hotel') }}{% endif %}<small><a class="popup-text" href="#search-dialog" data-effect="mfp-zoom-out">{{ 'Change search' | trans({}, 'hotel') }}</a></small></h3>
        {% endif %}
        <div class="row">
            <div class="col-md-3">
                <div class="row">
                    <div class="col-xs-12" style="padding-bottom: 10px">
                        <button class="btn btn-default" id="exec-filter">Filter</button>
                        <button class="btn btn-default" id="clear-filters">Clear Filters</button>
                    </div>
                </div>


                <aside class="booking-filters text-white">
                    <h3>Filter By:</h3>
                    <ul class="list booking-filters-list">
                        <li>
                            <h5 class="booking-filters-title">Star Rating</h5>
                            <div id="filter-rating" class="radio-group">
                                <div class="radio">
                                    <label>
                                        <input data-stars="5" class="i-radio" type="radio" />5 stars ({{ stars[5] }})</label>
                                    <input type="hidden" value="5">
                                </div>
                                <div class="radio">
                                    <label>
                                        <input data-stars="4" class="i-radio" type="radio" />4 star ({{ stars[4] }})</label>
                                    <input type="hidden" value="5">
                                </div>
                                <div class="radio">
                                    <label>
                                        <input data-stars="3" class="i-radio" type="radio" />3 star ({{ stars[3] }})</label>
                                    <input type="hidden" value="5">
                                </div>
                                <div class="radio">
                                    <label>
                                        <input data-stars="2" class="i-radio" type="radio" />2 star ({{ stars[2] }})</label>
                                    <input type="hidden" value="5">
                                </div>
                                <div class="radio">
                                    <label>
                                        <input data-stars="1" class="i-radio" type="radio" />1 star ({{ stars[1] }})</label>
                                    <input type="hidden" value="5">
                                </div>

                            </div>
                        </li>
                        <li>
                            <h5 class="booking-filters-title">Hotel Types</h5>
                            <div id="filter-hotel-types" class="radio-group">
                                {% for hotelType in hotelTypes %}
                                    <div class="radio">
                                        <label>
                                            <input data-idType="{{ hotelType.type.id }}" class="i-radio" type="radio" />{{ hotelType.type~' ('~hotelType.cantType~')' }}</label>
                                        <input type="hidden" value="{{ hotelType.type }}">
                                    </div>
                                {% endfor %}
                            </div>


                        </li>
                        <li>
                            <h5 class="booking-filters-title">Facilities</h5>
                            <div class="radio-group">

                                    {% for hotelFacility in hotelFacilities %}
                                        <div class="radio">
                                            <label>
                                                <input class="i-radio" type="radio" />{{ hotelFacility.facility }} ({{ hotelFacility.cantTypeFacility }})
                                            </label>
                                        </div>
                                    {% endfor %}
                        </li>
                    </ul>
                </aside>


            </div>
            <div class="col-md-9">
                <div id="ajax-hotels">
                    {% include 'DaiquiriSiteBundle:Hotel:ajax_hotels.html.twig' %}
                </div>
            </div>
        </div>
        <div class="gap"></div>
    </div>

    {% include 'DaiquiriSiteBundle:Default:footer.html.twig' %}

    <script>

        jQuery(document).ready(function () {
            filters.onReady();
            var url = '{{ path('hotel_list_ajax', { page:1 }) }}';
            filters.launchFilter('hotels', url);
        });

    </script>
{% endblock %}



