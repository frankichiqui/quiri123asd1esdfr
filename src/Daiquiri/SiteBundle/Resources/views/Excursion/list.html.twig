{% extends "base.html.twig"%}
{% block body %}
    {% include 'DaiquiriSiteBundle:Default:header.html.twig' %}
    <div class="container">
        {% include 'breadcrumb/breadcrumb.html.twig'%}
        <div class="mfp-with-anim mfp-hide mfp-dialog mfp-search-dialog" id="search-dialog">
            <h3>{{ 'Search for Excursions' | trans({}, 'excursion') }}</h3>
            {{ render(controller('DaiquiriSiteBundle:ExcursionSearcher:new')) }}
        </div>
        {% if salida.haveToPaginate %}
            <h3 class="booking-title">{{ salida | length }} {{ 'Excursions availables on' | trans({}, 'excursion') }} {{ salida.currentPageResults[0].getPoloFrom() }}<small><a class="popup-text" href="#search-dialog" data-effect="mfp-zoom-out">{{ 'Change search' | trans({}, 'excursion') }}</a></small></h3>
                {% else %}
                    {% if polo is defined %}
                <h3 class="booking-title">{% if salida | length < 0 %}{{ salida | length }} {{ 'Excursions on' | trans({}, 'excursion') }} {{ polo }}{% else %}{{ salida | length }} {{ 'Excursions availables on' | trans({}, 'excursion') }} {{ polo }}{% endif %}<small><a class="popup-text" href="#search-dialog" data-effect="mfp-zoom-out">{{ 'Change search' | trans({}, 'excursion') }}</a></small></h3>
                    {% else %}
                <h3 class="booking-title">{% if salida | length < 0 %}{{ salida | length }} {{ 'Excursions' | trans({}, 'excursion') }}{% else %}{{ salida | length }} {{ 'Excursions availables' | trans({}, 'excursion') }}{% endif %}<small><a class="popup-text" href="#search-dialog" data-effect="mfp-zoom-out">{{ 'Change search' | trans({}, 'excursion') }}</a></small></h3>
                    {% endif %}
                {% endif %}
        <div class="row">
            <div class="col-md-3">
                <aside class="booking-filters text-white">
                    <h3>Filter By:</h3>
                    <ul class="list booking-filters-list">
                        <li>
                            <h5 class="booking-filters-title">Star Rating</h5>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />5 star (220)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />4 star (112)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />3 star (75)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />2 star (60)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />1 star (20)</label>
                            </div>
                        </li>
                        <li>
                            <h5 class="booking-filters-title">Attractions</h5>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Perfomances (126)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Cultural (80)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Museums (130)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Landmarks (52)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Outdoors (62)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Amusement (22)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Sports (32)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Zoos & Aquariums (7)</label>
                            </div>
                        </li>
                        <li>
                            <h5 class="booking-filters-title">Activities</h5>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Sightseeing Tours (184)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Wellness & Spas (130)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Food & Drink (40)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Adventure (15)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Classes (34)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Gear Rentals (10)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Ranch & Farm (1)</label>
                            </div>
                        </li>
                        <li>
                            <h5 class="booking-filters-title">Nightlife</h5>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Bars (115)</label>
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input class="i-check" type="checkbox" />Clubs (63)</label>
                            </div>
                        </li>
                    </ul>
                </aside>
            </div>
            <div class="col-md-9">
                <div class="nav-drop booking-sort">
                    <h5 class="booking-sort-title"><a href="#">Sort: Ranking<i class="fa fa-angle-down"></i><i class="fa fa-angle-up"></i></a></h5>
                    <ul class="nav-drop-menu">
                        <li><a href="#">Name (A-Z)</a>
                        </li>
                        <li><a href="#">Name (Z-A)</a>
                        </li>
                        <li><a href="#">Number of Reviews</a>
                        </li>
                        <li><a href="#">Just Added</a>
                        </li>
                    </ul>
                </div>
                <ul class="booking-list">
                    {% for excursion in salida.currentPageResults %}
                        {#{ dump(excursion) }#}
                        <li>
                            <a class="booking-item" href="{{ path('excursion_show',{'slug': excursion.slug })}}">
                                <div class="row">
                                    <div class="col-md-4">
                                        {% if excursion.picture.galleryHasMedias is defined %}
                                            <img src="{% path excursion.picture, 'reference' %}" alt="{{ excursion.title }}" title="{{ excursion.title }}" />
                                        {% else %}
                                            <img src="{{ asset('bundles/daiquirisite/img/800x600.png') }}" alt="{{ excursion.title }}" title="{{ excursion.title }}" />
                                        {% endif %}
                                    </div>
                                    <div class="col-md-5">
                                        <div class="booking-item-rating">
                                            <ul class="icon-group booking-item-rating-stars">
                                                <li><i class="fa fa-star"></i>
                                                </li>
                                                <li><i class="fa fa-star"></i>
                                                </li>
                                                <li><i class="fa fa-star"></i>
                                                </li>
                                                <li><i class="fa fa-star"></i>
                                                </li>
                                                <li><i class="fa fa-star-o"></i>
                                                </li>
                                            </ul><span class="booking-item-rating-number"><b >3.9</b> of 5</span><small>(668 reviews)</small>
                                        </div>
                                        <h5 class="booking-item-title">{{ excursion.title }}</h5>
                                        <p class="booking-item-address">
                                            {% if excursion.getColective() is not defined  or excursion.getColective() == false %}
                                                <i class="fa fa-user"></i>
                                                <small><b>{{ 'Type' | trans({}, 'excursion') }}:</b> {{ 'Excluisve Ecursion' | trans({}, 'excursion') }}</small>
                                            {% else %}
                                                <i class="fa fa-users"></i>
                                                <small><b>{{ 'Type' | trans({}, 'excursion') }}:</b> {{ 'Collective Ecursion' | trans({}, 'excursion') }}</small>
                                            {% endif %}
                                        </p>
                                        <p class="booking-item-address">
                                            {% for p in excursion.places %}
                                            <i class="fa fa-map-marker"></i><small>{{ p }} ({{ p.polo }})</small>
                                            {% endfor %}
                                        </p>
                                        <p class="booking-item-address"><i class="fa fa-clock-o"></i>
                                            <small><b>{{ 'Duration' | trans({}, 'excursion') }}:</b>  {{ excursion.duration }} {{ 'hours' | trans({}, 'excursion')}}</small>
                                        </p>
                                        <p class="booking-item-description">{{ excursion.description | truncate(120) | raw }}</p>
                                    </div>
                                    <div class="col-md-3"><span class="booking-item-price">{{ excursion.adultprice | price | raw }} </span><span>/{{ 'adults' | trans({}, 'excursion') }}</span>
                                    </div>
                                    <div class="col-md-3"><span class="booking-item-price">{{ excursion.kidprice | price | raw }} </span><span>/{{ 'kids' | trans({}, 'excursion') }}</span>
                                    </div>
                                </div>
                            </a>
                        </li>
                    {% else %}

                        <div class="alert alert-info">                            
                            <p class="text-bigger"> {{ 'No excursions to show' | trans({}, 'excursion') }}</p>
                        </div>


                    {% endfor %}

                </ul>
                <div class="row">

                    <div class="col-md-7">
                        {% if salida.haveToPaginate %}
                            <p><small>{{ salida | length }} {{ 'Excursions on' | trans({}, 'excursion') }}  {{ salida.currentPageResults[0].getPoloFrom() }} &nbsp;&nbsp;{{ 'Showing' | trans({}, 'excursion') }} {{ salida.getCurrentPage }} – {{ salida.getNbPages }}</small>
                            </p>
                            {% if polo is defined and polo is not null %}
                                {{ pagerfanta(salida, 'page_view', {'routeName': 'excursion_list_polo_paginated', 'routeParams' : { 'polo': polo.slug }}, pagerfanta_opts) }}
                            {% else %}
                                {{ pagerfanta(salida, 'page_view', {'routeName': 'excursion_list_paginated'}, pagerfanta_opts) }}
                            {% endif %}
                        {% endif %}
                    </div>                   
                    <div class="col-md-5 text-right">
                        <p>{{ "Not what you\'re looking for?" | trans({}, 'excursion') }} <a class="popup-text" href="#search-dialog" data-effect="mfp-zoom-out">{{ 'Try your search again' | trans({}, 'excursion') }}</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="gap"></div>
    </div>

    {% include 'DaiquiriSiteBundle:Default:footer.html.twig' %}
{% endblock %}