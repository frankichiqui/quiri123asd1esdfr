<div class="gap gap-small"></div>
<div class="container">
    <h2>{{ block.title | title}}</h2>
    <div class="row row-wrap">
        {% set cant = 0 %}
        {% for c in campaigns %}
            {% if cant < block.mincampaign %}
                <div class="col-md-3">
                    <div class="thumb">
                        <header class="thumb-header">
                            <a class="hover-img curved" href="#">
                                {% if c.picture.galleryHasMedias is defined %}
                                    <img src="{% path c.picture, 'reference' %}" alt="{{ c }}" title="{{ c }}" />
                                {% else %}
                                    <img src="{{ asset('bundles/daiquirisite/img/800x600.png') }}" alt="{{ c }}" title="{{ c }}" />
                                {% endif %}
                            </a>
                        </header>
                        <div class="img-left">
                            <img src="{{ asset('bundles/daiquirisite/img/flags/32/cu.png') }}" alt="Image Alternative text" title="Image Title">
                        </div>
                        <div class="thumb-caption">
                            <h4 class="thumb-title"><a class="text-darken" href="#">{{ c.title }}</a></h4>
                            <div class="thumb-caption">
                                <p class="thumb-desc">{{ c.subtitle }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
            {% set cant = cant + 1 %}   
        {% endfor %}


    </div>
</div>