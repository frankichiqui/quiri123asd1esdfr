{% extends base_template %}
{% block actions %}
    <li>{% include 'SonataAdminBundle:Button:list_button.html.twig' %}</li>
    {% endblock %}

{% block show %}
    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
    <div class="sonata-ba-view">
        <div class="row">
            <div class="col-md-12">
                <div class="row">      
                    <div class="col-md-12">
                        {{ form_start(form, {'action': admin.generateUrl('create-promotion-block'), 'method': 'POST'}) }}
                        {{ form_errors(form) }}
                        <div class="box box-primary">
                            <div class="box-header">
                                <h4 class="box-title">
                                    Get promoted to main slide
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="row"> 
                                    <div class="col-md-12">
                                        <div class="box box-primary">
                                            <div class="box-header">
                                                <h4 class="box-title">
                                                    {{ form_label(form.promotionSlide) }}
                                                </h4>
                                            </div>
                                            <div class="box-body">
                                                <div  class="form-group">
                                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                                        {{ form_widget(form.promotionSlide) }} 
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="box-header">
                                <h4 class="box-title">
                                    Set a location in a block
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="row"> 

                                    <div class="col-md-3">
                                        <div class="box box-primary">
                                            <div class="box-header">
                                                <h4 class="box-title">
                                                    {{ form_label(form.promotionBlockOne) }}
                                                </h4>
                                            </div>
                                            <div class="box-body">
                                                <div  class="form-group">
                                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                                        {{ form_widget(form.promotionBlockOne) }} 
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-3">
                                        <div class="box box-primary">
                                            <div class="box-header">
                                                <h4 class="box-title">
                                                    {{ form_label(form.promotionBlockTwo) }}
                                                </h4>
                                            </div>
                                            <div class="box-body">
                                                <div  class="form-group">
                                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                                        {{ form_widget(form.promotionBlockTwo) }} 
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-3">
                                        <div class="box box-primary">
                                            <div class="box-header">
                                                <h4 class="box-title">
                                                    {{ form_label(form.promotionBlockThree) }}
                                                </h4>
                                            </div>
                                            <div class="box-body">
                                                <div  class="form-group">
                                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                                        {{ form_widget(form.promotionBlockThree) }} 
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-md-3">
                                        <div class="box box-primary">
                                            <div class="box-header">
                                                <h4 class="box-title">
                                                    {{ form_label(form.promotionBlockFour) }}
                                                </h4>
                                            </div>
                                            <div class="box-body">
                                                <div  class="form-group">
                                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                                        {{ form_widget(form.promotionBlockFour) }} 
                                                    </div>
                                                </div>         
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <div class="sonata-ba-form-actions well well-small form-actions stuck">
                            <button name="btn_create_and_edit" type="submit" class="btn btn-success"><i class="fa fa-save"></i> Create</button>                            
                            {#<button type="submit" class="btn btn-success" name="btn_create_and_list"><i class="fa fa-save"></i> <i class="fa fa-list"></i> Create and return to list</button>#}
                            <a class="btn btn-success" href="{{ admin.generateUrl('list') }}">
                                <i class="fa fa-th-list"></i> Return to list</a>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

