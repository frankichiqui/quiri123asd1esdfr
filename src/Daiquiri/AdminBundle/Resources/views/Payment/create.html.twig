{% extends "DaiquiriAdminBundle:Default:standard_layout.html.twig"%}
{% block show %}
    {% include 'SonataCoreBundle:FlashMessage:render.html.twig' %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h4>Create new Payment</h4>
                </div>
                <div class="box-body">
                    <div class="sonata-ba-collapsed-fields">
                        {{ form_errors(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                <div>
                                    {{ form_label(form.amount) }}
                                    <div class="input-group">
                                        <span class="input-group-addon">$</span>
                                        {{ form_widget(form.amount, {'attr':{'class':'form-control'}}) }} 
                                        <span class="input-group-addon">.00</span>
                                    </div>



                                </div>
                            </div>
                            <div class="col-md-12">
                                <div>
                                    {{ form_label(form.currency) }}
                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                        {{ form_widget(form.currency) }} 
                                    </div>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header">
                    <h4>Description</h4>
                </div>
                <div class="box-body">
                    <div class="sonata-ba-collapsed-fields">

                        <div class="row">

                            <div class="col-md-12">
                                <div>                                    
                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                        {{ form_widget(form.description) }} 
                                    </div>
                                </div>
                            </div>
                            <div class="pull-right margin-right-10">
                                <div>
                                    &nbsp;
                                    <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                        <button name="btn_create_and_edit" type="submit" class="btn btn-success"><i class="fa fa-credit-card"></i> To Bank</button> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}